{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets": ["./assets/*"],
      "@env": ["./src/core/env.js"]
    },
    "esModuleInterop": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "docs",
    "cli",
    "android",
    "ios",
    "lint-staged.config.js"
  ]
}
